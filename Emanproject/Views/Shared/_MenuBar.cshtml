
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
<style>
/*-- Custom Dark Mode Colors --*/
    header .main_nav_container .main_nav_item .text-warning:hover {
        color: #adafae !important;
    }
    header .main_nav_container .main_nav_item .text-body:hover {
        color: #f80 !important;
    }
</style>

<header class=" bg-light header d-flex flex-row">
    <div class="header_content d-flex flex-row align-items-center">
        <!-- Logo -->
        <div class="logo_container">
            <div class="logo">
                <img src="~/images/logo.png" alt="">
                <span class="text-body">EmanSchool</span>
            </div>
        </div>

        <!-- Main Navigation -->
        <nav class="main_nav_container">
            <div class="main_nav">
                <ul class="main_nav_list">


                    <li class="main_nav_item">@Html.ActionLink("Home", "Index", "Home",null, new { @class = "text-warning custom-link" })</li>
                    <li class="main_nav_item">@Html.ActionLink("Student", "Index", "Students", null, new { @class = "text-body" })</li>
                    <li class="main_nav_item">@Html.ActionLink("classes", "Index", "classes", null, new { @class = "text-body" })</li>
                    <li class="main_nav_item">@Html.ActionLink("Countries", "Index", "Countries", null, new { @class = "text-body" })</li>
                    <li class="main_nav_item">@Html.ActionLink("Statistics", "Statistics", "Home", null, new { @class = "text-body" })</li>
                </ul>
            </div>
        </nav>
    </div>
    <div class=" header_side d-flex flex-row justify-content-center align-items-center">
        @Html.Partial("_DarkLight")
    </div>

    <!-- Hamburger -->
    <div class="hamburger_container">
        <i class="fas fa-bars trans_200"></i>
    </div>

</header>
